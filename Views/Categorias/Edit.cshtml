@model CasaLannister.Models.Categoria

@{
    ViewData["Title"] = "Editar Linaje";
}

<div class="container mt-4">
    <h1 class="text-danger mb-4">✏️ Modificar Linaje</h1>

    <div class="card border-danger">
        <div class="card-header bg-dark text-danger">
            <h4 class="mb-0">Edición de Casa Noble</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-4">
                    <label asp-for="Nombre" class="control-label text-danger">Nombre del Linaje</label>
                    <input asp-for="Nombre" class="form-control bg-dark text-light border-danger" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-lg btn-danger">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-lg btn-outline-danger ms-2">
                        <i class="fas fa-undo"></i> Volver al Listado
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>