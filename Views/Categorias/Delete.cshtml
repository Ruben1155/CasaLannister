@model CasaLannister.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Linaje";
}

<div class="container mt-4">
    <h1 class="text-danger mb-4">⚠️ Eliminar Linaje</h1>

    <div class="card border-danger">
        <div class="card-header bg-dark text-danger">
            <h4 class="mb-0">Confirmación de Destrucción</h4>
        </div>
        <div class="card-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <h3 class="text-danger">¿Estás seguro de eliminar este linaje?</h3>
            <dl class="row mt-4">
                <dt class="col-sm-3 text-danger">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 text-danger">Productos asociados:</dt>
                <dd class="col-sm-9">@(Model.Productos?.Count ?? 0)</dd>
            </dl>

            <form asp-action="Delete" class="mt-5">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="fas fa-skull-crossbones"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-lg btn-outline-danger ms-2">
                    <i class="fas fa-ban"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>