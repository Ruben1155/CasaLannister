@model CasaLannister.Models.Categoria

@{
    ViewData["Title"] = "Detalles del Linaje";
}

<div class="container mt-4">
    <h1 class="text-danger mb-4">📜 Detalles de @Model.Nombre</h1>

    <div class="card border-danger">
        <div class="card-header bg-dark text-danger">
            <h4 class="mb-0">Información del Linaje</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-danger">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-danger">Productos Asociados:</dt>
                <dd class="col-sm-9">
                    @if (Model.Productos != null && Model.Productos.Any())
                    {
                        <ul class="list-group">
                            @foreach (var producto in Model.Productos)
                            {
                                <li class="list-group-item bg-dark text-light">
                                    @producto.Nombre - @producto.Precio.ToString("C")
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No hay productos en este linaje</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-danger">
                <i class="fas fa-undo"></i> Volver
            </a>
        </div>
    </div>
</div>