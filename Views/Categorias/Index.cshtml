@model IEnumerable<CasaLannister.Models.Categoria>

@{
    ViewData["Title"] = "Categorías Nobles";
}

<div class="container">
    <h1 class="text-danger mb-4">🏰 Categorías del Reino</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-crown"></i> Nueva Categoría Noble
        </a>
    </div>

    <div class="card border-danger">
        <div class="card-header bg-dark text-danger">
            <h3 class="mb-0">Linajes Registrados</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-scroll"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>